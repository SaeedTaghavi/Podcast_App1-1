<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="e.aakriti.work.podcast_app.User_details">

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/whooshkaa">

        <TextView
            android:id="@+id/titleTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/header_text_on_user_detail_activity"/>

        <ImageView
            android:id="@+id/menuImg"
            android:layout_width="@dimen/abc_action_button_min_width_material"
            android:layout_height="@dimen/abc_action_button_min_width_material"
            android:layout_margin="@dimen/lib_view_margin_left"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_button_on_user_detal_activity"
            android:textAllCaps="false"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:background="@color/whooshkaa"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/submit_userinfo"/>
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your email address won't be displyed on your Whooshkaa public profile"
        android:layout_below="@+id/rel"
        android:textColor="@color/whooshkaa"
        android:gravity="center_horizontal"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/text_below_header"
        android:layout_centerHorizontal="true"/>





    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:layout_below="@+id/text_below_header"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/username_linearlayout">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username_text"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_gravity="start"
        android:textColor="@color/whooshkaa"/>
    <EditText
        android:id="@+id/username_edittext"
        android:inputType="textPersonName"
        android:layout_width="@dimen/Connect_with_button_width"
        android:layout_height="@dimen/connect_with_button_height"
       />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:layout_below="@+id/username_linearlayout"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/email_linearlayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_text"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:textColor="@color/whooshkaa"/>
        <EditText
            android:id="@+id/email_edittext"
            android:inputType="textEmailAddress"
            android:layout_width="@dimen/Connect_with_button_width"
            android:layout_height="@dimen/connect_with_button_height"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp"
        android:layout_below="@+id/email_linearlayout"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/birthday_linearlayout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_of_birthday_text"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:textColor="@color/whooshkaa"/>

        <EditText
            android:layout_width="@dimen/Connect_with_button_width"
            android:layout_height="@dimen/connect_with_button_height"
            android:id="@+id/bitrhday_edittext"
            android:editable="false"
            android:focusable="false"
            />

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/birthday_linearlayout"
        android:layout_toRightOf="@+id/birthday_linearlayout"
        android:contentDescription="selectdate"
        android:cropToPadding="true"
        android:src="@drawable/calendar_iconn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt"
        android:layout_below="@+id/birthday_linearlayout"
        android:layout_marginLeft="50dp"/>


</RelativeLayout>